<launch>
    <arg name="ss_msg" default="Ros_Service/Client_Example"/>
    <arg name="record" default="false"/>

    <node pkg="beginner_tutorials" name="publisher" type="talker" output="screen" args="$(arg ss_msg)" />

    <node pkg="beginner_tutorials" name="subscriber" type="listener" output="screen" />
    <node pkg="rosbag" name="rosbag_talker" type="record" args="--all --output-name=$(find beginner_tutorials)/results/talker.bag" if="$(arg record)" />
</launch>
